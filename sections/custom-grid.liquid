<section
  class="
    section
    {{ section.settings.css_class }}
    is-width-{{ section.settings.width }}
  "
>

<div class="outer_container">
    <div class="inner_container_left">
        <div class="inner_container_left_top">
            
              <div class="inner_container_left_top_left">
                {% if section.settings.link_1 != blank %}
                  <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_1}}"></a>
                {% endif %}
              </div>  
            <div class="inner_container_left_top_right">
                <div class="inner_container_left_top_right_top">
                  {% if section.settings.link_2 != blank %}
                    <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_2}}"></a>
                  {% endif %}
                </div>
                <div class="inner_container_left_top_right_bottom">
                {% if section.settings.link_3 != blank %}
                  <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_3}}"></a>
                {% endif %}
                </div>
            </div>          
        </div>
        <div class="inner_container_left_bottom">
            <div class="inner_container_left_bottom_left">
            {{section.settings.text}}
            {% if section.settings.button_label != blank %}
              <a href="{{section.settings.link}}" >
                <button class="button button--primary" style="margin-top:10px; margin-bottom:30px;">
                  {{section.settings.button_label}}
                </button>
              </a>
            {% endif %}
            </div>
            <div class="inner_container_left_bottom_right">
                <div class="inner_container_left_bottom_right_top">
                  {% if section.settings.link_4 != blank %}
                    <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_4}}"></a>
                  {% endif %}               
                </div> 
                <div class="inner_container_left_bottom_right_bottom">
                  <div class="inner_container_left_bottom_right_bottom_left">
                    {% if section.settings.link_5 != blank %}
                      <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_5}}"></a>
                    {% endif %}
                  </div>
                  <div class="inner_container_left_bottom_right_bottom_right">
                    {% if section.settings.link_6 != blank %}
                      <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_6}}"></a>
                    {% endif %}
                  </div>
                </div> 
            </div>
        </div>
    </div>
    <div class="inner_container_right">
       <div class="inner_container_right_top">
          {% if section.settings.link_7 != blank %}
            <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_7}}"></a>
          {% endif %}       
       </div>
       <div class="inner_container_right_middle">
          {% if section.settings.link_8 != blank %}
            <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_8}}"></a>        
          {% endif %}
       </div>
       <div class="inner_container_right_bottom">
          {% if section.settings.link_9 != blank %}
            <a style="display:block; height:100%; width:100%;" href="{{section.settings.link_9}}"></a>  
          {% endif %}      
       </div>
    </div>
</div>

</section>


{% style %}

.outer_container{
    display:grid;
    grid-template-columns: 60% auto;
    margin:20px 0px;
    grid-gap:15px;
    min-height:1000px;
}


.outer_container p {
  font-size: 18px;
}

.outer_container div{
  border-radius:5px;
}

.inner_container_left{
  display:grid;
  grid-template-rows: 20% auto;
  grid-gap:25px;
}
.inner_container_right{
  display:grid;
  grid-template-rows: 35% 8.3% 35% auto;
  grid-gap:15px;
}
.inner_container_left_top{
    display:grid;
    grid-template-columns: 78% auto;
    grid-gap:15px;
}

.inner_container_left_top_left{
    background-image: url("{{section.settings.image_1 | img_url: 'master'}}");
    background-size: 100% 100%;
}

.inner_container_left_top_right{
    display:grid;
    grid-template-rows: 56.5% 43.5%;
    grid-gap:5px;
}

.inner_container_left_top_right_top{
    background-image: url("{{section.settings.image_2 | img_url: 'master'}}");
    background-size: 100% 100%;
    background-position:right;
    background-repeat:no-repeat;
}

.inner_container_left_top_right_bottom{
    background-image: url("{{section.settings.image_3 | img_url: 'master'}}");
    background-size: 100% 100%;
    background-position:right;
    background-repeat:no-repeat;
}



.inner_container_left_bottom{
    display:grid;
    grid-template-columns: 40% auto;
  grid-gap:15px;
}

.inner_container_left_bottom_left{

}

.inner_container_left_bottom_right{
    display:grid;
    grid-template-rows: 60% auto;
  grid-gap:15px;
}

.inner_container_left_bottom_right_top{
    background-image: url("{{section.settings.image_4 | img_url: 'master'}}");
    background-size:cover;
    background-position:center;
    background-repeat:norepeat;}

.inner_container_left_bottom_right_bottom{
    display:grid;
    grid-template-columns: 60% auto;
  grid-gap:15px;
}

.inner_container_left_bottom_right_bottom_left{
    background-image: url("{{section.settings.image_5 | img_url: 'master'}}");
    background-size:cover;
    background-position:center;
    background-repeat:norepeat;}

.inner_container_left_bottom_right_bottom_right{
    background-image: url("{{section.settings.image_6 | img_url: 'master'}}");
    background-size:100% auto;
    background-position:top;
    background-repeat:no-repeat;
}


.inner_container_right_top{
    background-image: url("{{section.settings.image_7 | img_url: 'master'}}");
    background-size:auto 100%;
    background-position:left;
    background-repeat:no-repeat;
    }

.inner_container_right_middle{
    background-image: url("{{section.settings.image_8 | img_url: 'master'}}");
    background-size:auto 100%;
    background-position:left;
    background-repeat:no-repeat;
    }

.inner_container_right_bottom{
    background-image: url("{{section.settings.image_9 | img_url: 'master'}}");
    background-size:auto 100%;
    background-position:left;
    background-repeat:no-repeat;
    }

@media only screen and (max-width: 990px) {

.outer_container{
    display:block;
    min-height:unset;
    padding:10px;
    padding-bottom:50px;
}

.inner_container_left{
  display:block;
}

.inner_container_left_top{
  height:225px;
  grid-template-columns:50% 50%;
  padding-bottom:20px;

}

.inner_container_left_top_left{
    background-size: 100% 30%;
    background-repeat:no-repeat;
}

.inner_container_left_bottom{
  display:block;
  padding-bottom:15px;
}

.inner_container_left_bottom_right{
  aspect-ratio:1/2;
  width:100%;
}


.inner_container_right{
  height:700px;
  grid-template-rows:44% 12% 44% 0px;
}


.outer_container p {
  font-size: 15px;
  padding-bottom:10px;
}

}

{% endstyle %}


