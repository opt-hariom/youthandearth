  {% style %}

    .multiple_accordion_container-FAQ{
        padding: 0px 0px;
        margin:30px auto;
    }

    .product-FAQ_accordian .multiple_accordion_item {
      border-bottom:1px solid {{border_color}};
      padding: 20px 0px
    }

    
    .multiple_accordion_heading-FAQ{
      margin-bottom: 15px;
      font-size:30px;
      font-weight:400;
      color:{{section.settings.heading_color}};
    }
    .product-FAQ_accordian .multiple_accordion_title-FAQ{
      display:flex;
      font-size:25px;
      padding: 0px;
      border-bottom: 0px;
      color:{{section.settings.tab_heading_color}};
      max-width: 1200px;
      width: 95%;
      margin: 0 auto;
      align-items: center
    }

    .product-FAQ_image {
      height: 40px;
      width: 40px;
      object-fit: cover;
      margin-right: 20px
    }
    
    .product-FAQ_accordian .multiple_accordion_content-FAQ{
      text-align:left;
      display:none;
      max-width: 1200px;
      width: 95%;
      margin: 0 auto;
      padding: 0px;
      margin-top: 15px;
      font-size: 18px
    }

    .accordian_content_heading-FAQ{
        margin-top:30px;
    }

    .multiple_accordion_title-FAQ:hover{
      cursor:pointer;
      background-color:{{section.settings.tab_hover_color}};
    }
    .accordion_expand-FAQ{
        margin:0px 5px;
        transform:translateY(2px);
    }

    .accordion_collapse-FAQ{
        margin:0px 5px;
        transform:translateY(2px);
    }
    

    .accordion_expand-FAQ .icon svg{
     height:60%;
     width:60%;
    }

    .accordion_collapse-FAQ .icon svg{
     height:60%;
     width:60%;
    }

    .product-FAQ_accordian-inner {
      max-width: 1200px;
      width: 95%;
      margin: 0 auto 
    }

   .product-FAQ_title-container {
     display:flex
   }

    .faq-title {
      max-width: 1200px;
      width: 95%;
      margin: auto
    }

    @media only screen and (max-width: 600px) {
    .multiple_accordion_content-FAQ{
      text-align:left;
      display:none;
      padding:20px 10px;

    }

    }
