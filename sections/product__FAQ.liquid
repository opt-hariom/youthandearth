      $('.item-FAQ').click(function(){
      //get the clicked item
      $clickedItem = $('.multiple_accordion_content-FAQ',this);
      $clickedItemIconExpand = $('.accordion_expand-FAQ',this);
      $clickedItemIconCollapse = $('.accordion_collapse-FAQ',this);
      // is the clicked item already open?
