{% style %}
#shopify-section-{{ section.id }} {
  {% if section.settings.border_top_and_bottom %}
    border-top: 1px solid black;
    border-bottom: 1px solid black;
  {% endif %}
  background-color: {{ section.settings.section_background_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  padding-left: {{ section.settings.padding_left }}px;
  padding-right: {{ section.settings.padding_right }}px;
  {% if section.settings.width == 'wide' %}
    width: 100%;
  {% elsif section.settings.width == 'half' %}
    width: 50%;
  {% endif %}
}

#shopify-section-{{ section.id }} h2 {
  font-size: {{section.settings.section_heading_font_size_desktop}}px !important;
  max-width:75%;
  line-height:1.2;
  margin-bottom:20px;
}

@media only screen and (max-width: 798px) {
  #shopify-section-{{ section.id }} h2 {
    font-size: {{section.settings.section_heading_font_size_mobile}}px !important;
    margin-bottom:0px;
  }
}

#shopify-section-{{ section.id }} .color_blocks_subheading {
  font-size: {{section.settings.section_sub_heading_font_size_desktop}}px !important;
}

@media only screen and (max-width: 798px) {
  #shopify-section-{{ section.id }} .color_blocks_subheading {
    font-size: {{section.settings.section_sub_heading_font_size_mobile}}px !important;
  }
}


#shopify-section-{{ section.id }} .icon-with-text-color-block {
  min-height: {{ section.settings.min_block_height }}px;
  width: calc(25% - 20px);
  border-radius: {{ section.settings.border_radius }}px;
  border: 0px solid {{ section.settings.text_color }};
}

@media only screen and (max-width: 798px) {

#shopify-section-{{ section.id }} .icon-with-text-color-block {
  min-width: calc(80%);
}

}



#shopify-section-{{ section.id }} .color-block-content p {
  font-size: {{ section.settings.font_size }}px;
  line-height: 1.5;
}

#shopify-section-{{ section.id }} .color-block-content {
  font-size: {{ section.settings.font_size }}px;
  line-height: 1.5;
  border-radius: {{ section.settings.border_radius }}px;
}

#shopify-section-{{ section.id }} .color-block-content h3 {
  font-size: {{ section.settings.heading_font_size }}px;
  line-height: 1.5;
}

#shopify-section-{{ section.id }} .icon-with-text-color-block {
  background-size: cover;
  background-position: center;
}

