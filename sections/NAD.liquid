      filter: invert(1);
      width: 80%;
      margin: auto;
      display: table;
  }
    img {
      max-width: 100%;
      vertical-align: top;
  }
    .beige-box-style-3 img {
      width: 55%;
      margin: 0 auto 20px;
      filter: brightness(1) invert(0);
      padding-top: 10px;
      display: table;
  }
    .green-box-wide img {
      width: 80%;
      margin: 0 auto 20px;
      padding-top: 20px;
      filter: brightness(0) invert(1);
      display: table;
  }
    .green-box-wide p {
      width: 60%;
      margin: auto;
      font-family: Montserrat;
      line-height: normal;
      padding: 20px;
          font-size:16px;
      color:white;

  }
    .green-box-style-2 img {
      filter: brightness(0) invert(1);
  }
  p:last-child {
      margin-bottom: 0;
  }
    .grid{
      display:flex;
    }

  .medium-up--two-sixths {
      width: 50%;
  }

    .brown-box-2 img{

      width:40%;
    }

    .brown-box-2 .image_wrapper{
       display: flex;
      justify-content: center;
    }
    .outer-grid{
      display:flex;
      flex-direction:column;
    }
    .bottom_wide{
      padding-right: 20px;
      padding-left: 45px;
    }
    .code-block img {
      width: 40%;
      margin: 0 auto 20px;
      filter: invert(1);
      display: table;
  }
    .beige-box-style-1-image img{
      padding-bottom:10px;
    }


    @media only screen and (min-width: 750px)

