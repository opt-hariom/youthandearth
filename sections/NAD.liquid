<section class="section nad-main">
  <div class="outer-grid">
    <div class="grid">
      <div class="grid__item medium-up--four-sixths">
        <div class="nad-row left">
          <div class="nad-half">
            {% if section.settings.discription1 or section.settings.left_img1 != blank %}
              <div class="nad-block">
                <div class="green-box-style-1">
                  {% if section.settings.discription1 != blank %}
                    <div class="grren-box-txt">
                      {{ section.settings.discription1 }}
                    </div>
                  {% endif %}
                  {% if section.settings.left_img1 != blank %}
                    <div class="grren-box-img">
                      <img src="{{ section.settings.left_img1 | img_url: 'master' }}">
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
            {% if section.settings.left_img2 or section.settings.discription2 != blank %}
              <div class="nad-block">
                <div class="beige-box-style-1">
                  <div class="beige-box-style-1-image">
                    {% if section.settings.left_img2 != blank %}
                      <img src="{{ section.settings.left_img2 | img_url: 'master' }}">
                    {% endif %}
                    {% if section.settings.discription2 != blank %}
                      {{ section.settings.discription2 }}
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
          <div class="nad-half">
            {% if section.settings.cent_img1 or section.settings.cent_discription1 != blank %}
              <div class="nad-block">
                <div class="beige-box-style-2">
                  {% if section.settings.cent_img1 != blank %}
                    <img src="{{ section.settings.cent_img1 | img_url: 'master' }}">
                  {% endif %}
                  {% if section.settings.cent_discription1 != blank %}
                    {{ section.settings.cent_discription1 }}
                  {% endif %}
                </div>
              </div>
            {% endif %}
            {% if section.settings.cent_img2 or section.settings.cent_discription2 != blank %}
              <div class="nad-block">
                <div class="green-box-style-2 ">
                  {% if section.settings.cent_img2 != blank %}
                    <img src="{{ section.settings.cent_img2 | img_url: 'master' }}">
                  {% endif %}
                  {% if section.settings.cent_discription2 != blank %}
                    {{ section.settings.cent_discription2 }}
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
        {% if section.settings.bottom_img
          or section.settings.bottom_discription1
          or section.settings.bootom_discription2 != blank
        %}
          <div class="nad-block">
            <div class="code-block brown-box-2">
              {% if section.settings.bottom_img != blank %}
                <div class="image_wrapper">
                  <img src="{{ section.settings.bottom_img | img_url: 'master' }}">
                </div>
              {% endif %}
              {% if section.settings.bottom_discription1 or section.settings.bootom_discription2 != blank %}
                <div class="brown-box-style-2-flex-text">
                  {% if section.settings.bottom_discription1 != blank %}
                    <div class="brown-box-style-2-flex-text-1">
                      {{ section.settings.bottom_discription1 }}
                    </div>
                  {% endif %}
                  {% if section.settings.bootom_discription2 != blank %}
                    <div class="brown-box-style-2-flex-text-2">
                      {{ section.settings.bootom_discription2 }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
      <div class="grid__item medium-up--two-sixths">
        {% if section.settings.right_img1 or section.settings.right_discription1 != blank %}
          <div class="nad-block">
            <div class="brown-box-style-1">
              {% if section.settings.right_img1 != blank %}
                <img src="{{ section.settings.right_img1 | img_url: 'master' }}">
              {% endif %}
              {% if section.settings.right_discription1 != blank %}
                {{ section.settings.right_discription1 }}
              {% endif %}
              {% if section.settings.right_botom_img1 != blank %}
                <div class="brown-box-style-1-image-2">
                  <img src="{{ section.settings.right_botom_img1 | img_url: 'master' }}">
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if section.settings.right_img2 or section.settings.right_discription2 != blank %}
          <div class="nad-block">
            <div class="beige-box-style-3">
              {% if section.settings.right_img2 != blank %}
                <img src="{{ section.settings.right_img2 | img_url: 'master' }}">
              {% endif %}
              {% if section.settings.right_discription2 != blank %}
                {{ section.settings.right_discription2 }}
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
    {% if section.settings.fullwith_img or section.settings.bottom_full_discription1 != blank %}
      <div class="grid">
        <div class="grid__item medium-up--one-whole bottom_wide">
          <div class="green-box-wide">
            {% if section.settings.fullwith_img != blank %}
              <img src="{{ section.settings.fullwith_img | img_url: 'master' }}">
            {% endif %}
            {% if section.settings.bottom_full_discription1 != blank %}
              {{ section.settings.bottom_full_discription1 }}
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>
